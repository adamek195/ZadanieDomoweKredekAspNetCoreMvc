@{
    ViewData["Title"] = "SentOpinion";
}

<html>
<head>
    <title>User Greetings</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="@Url.Content("~/Scripts/Style.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <br />
    <!--Sekcja wyświetlająca potwierdzenie przeslania opinii-->
    <div class="jumbotron">
        <div><h3>Użytkownik: @ViewBag.userName</h3></div>
        <div>
            Przesłał opinię: <br />
            @ViewBag.userOpinion
        </div>
    </div>
    <h3>Dziękujemy za przesłanie opinii!</h3>
    <hr />
</body>
</html>
